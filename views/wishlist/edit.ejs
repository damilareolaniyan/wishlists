    <% layout('layouts/boilerplate') %>
    <div class="p-4 max-w-xl bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 lg:p-8 dark:bg-gray-800 dark:border-gray-700 ml-60">
        <form class="space-y-6" action="/wishlists/edit/<%= wishlist.id %>" method="POST" enctype="multipart/form-data">
            <h3 class="text-xl font-medium text-gray-900 dark:text-white text-center">Edit wishlists</h3>
            <div>
                <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Edit title</label>
                <input type="text" name="title" id="title" value="<%= wishlist.title %> " class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
            </div>
            <div>
                <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Edit description</label>
                <input type="text" value="<%= wishlist.description %> " name="password" id="description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
            </div>
            <div>
                <label for="price" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Edit price</label>
                <input type="text" value="<%= wishlist.price %> " name="price" id="description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
            </div>
            <div>
                <input type="file" value="<%= wishlist.price %> " name="image" multiple class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
                <% wishlist.images.forEach(function(img, i){ %> 
                    <img src="<%= img.thumbnail %>" class="img-fluid">
                    <input type="checkbox" name="deleteImages[]" id="image-<%= i %>"
                    value="<%= img.filename %> " required
                    >
                    <% }) %> 
            </div>
            
            <button class="w-full text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Update Wishlist</button>
            
        </form>
    </div>




    
