<% layout('layouts/boilerplate') %>


<!--Tes-->
<section>
  <div class=" 2xl:max-w-7xl sm:px-6 md:px-12 lg:px-24 lg:py-24 2xl:px-12 px-4 py-12 mx-auto border border-gray-200 rounded-lg">
    <div class="2xl:max-w-7xl flex flex-wrap items-center mx-auto">
     
        
      
        
     
      <!---->
      <div class=" lg:flex-grow lg:w-1/2 lg:pr-24 md:mb-0 flex flex-col items-start mb-16 text-left">
       
          <p class="mb-2 text-lg font-bold tracking-tight text-black dark:text-white">Welcome <%= currentUser.username%></p>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-black-900 dark:text-white">All Wishlists</h5>
      <% if(wishlists.length < 1) { %>
        <p class="font-normal text-gray-700 dark:text-gray-400">No Wishlist!</p>
        
      <% }else{  %>
              <% for(let wishlist of wishlists){ %>
                <a href="/wishlists/<%= wishlist._id %>" class="block max-w-xl py-6 px-24 mb-3 bg-white border border-gray-200 rounded-lg shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text-black dark:text-white"><%= wishlist.name %></h5>
                  <p class="font-normal text-gray-700 dark:text-gray-400"></p>
                  <form action="/wishlists/<%= wishlist._id %>?_method=DELETE" method="POST">
                  <button class="py-2
            text-base
            font-medium
            text-white
            bg-red-600
            border border-transparent
            rounded-full
            shadow
            hover:bg-red-700
            focus:outline-none
            focus:ring-2
            focus:ring-white
            focus:ring-offset-2
            focus:ring-offset-gray-300
            sm:px-10">Delete</button>
                  </form>
              </a>
            <% } %> 
    <% } %>
        
      </div>
      <div class="lg:w-5/6 lg:max-w-lg xl:mt-0 w-full mt-12">
        <div>
          <div class="relative w-full max-w-lg">
            <div class=" bg-violet-300 -left-4 w-72 h-72 mix-blend-multiply filter blur-xl opacity-70 animate-blob absolute top-0 rounded-full"></div>
            <div class=" bg-fuchsia-300 -bottom-24 right-20 w-72 h-72 mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000 absolute rounded-full"></div>
            
              <h2 class="mt-6 text-3xl font-extrabold text-neutral-600"> Create new wishlist </h2>
              <div class="mt-6">
                <form action="/wishlists/new" class="space-y-6" method="POST" >
                    <div>
                        <label for="name" class="block text-sm font-medium text-neutral-600"> Name your wishlist</label>
                        <div class="mt-1">
                          <input id="name" name="wishlist[name]" type="text" placeholder="Name your wishlist" class="
                        block
                        w-full
                        px-5
                        py-3
                        text-base text-neutral-600
                        placeholder-gray-300
                        transition
                        duration-500
                        ease-in-out
                        transform
                        border border-transparent
                        rounded-full
                        bg-gray-50
                        focus:outline-none
                        focus:border-transparent
                        focus:ring-2
                        focus:ring-white
                        focus:ring-offset-2
                        focus:ring-offset-gray-300
                      " required>
                        </div>
                      </div>
                      <button class="
                flex
                items-center
                justify-center
                w-full
                px-10
                py-4
                text-base
                font-medium
                text-center text-white
                transition
                duration-500
                ease-in-out
                transform
                bg-red-600
                rounded-full
                hover:bg-red-700
                focus:outline-none
                focus:ring-2
                focus:ring-offset-2
                focus:ring-blue-500
              "> SAVE </button>
                    </form> 

             
                  
                </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


