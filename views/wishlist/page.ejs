<% layout('layouts/boilerplate') %>


<!--Main Section-->
<section>
  <div class="
relative
items-center
w-full
px-5
py-12
mx-auto
md:px-12
lg:px-24
max-w-7xl
">
<div class="pb-5 border-b border-black mb-8 inline-flex justify-between w-full">
  <h1 class="text-lg font-bold leading-6 ext-neutral-600"> <%= wishlist.name %>  </h1>
  <span><button class="px-3 py-1 bg-red-600 text-white hover:bg-red-700 rounded" id="delete-btn">Add Items</button>
    <button class="px-3 py-1 bg-green-600 text-white hover:bg-green-700 rounded">Share</button>
  </span>
  <span></span>
</div>
 
    <div class="grid w-full grid-cols-1 gap-6 mx-auto lg:grid-cols-3 ">
      <% for(let item of wishlist.items){ %>
        <div class="p-6 border-2">
          <img class="
        object-cover object-center
        w-full
        mb-8
        lg:h-48
        md:h-36
        rounded-xl
      " src="<%= item.image %> " alt=" Wedding Image">
          <div class="inline-flex justify-between w-full">
            <h1 class="
          mb-8
          text-xl
          font-semibold
          leading-none
          tracking-tighter
          text-neutral-600
        "> <%= item.title %>  </h1>
            <span> â‚¦<%= item.price %> </span>
          </div>
          <p class="mx-auto text-base font-medium leading-relaxed text-gray-500"> <%= item.description %>  </p>
          <div class="inline-flex justify-between w-full mt-2">
            <button class="px-2
            py-2
            text-base
            font-medium
            text-white
            bg-green-600
            border border-transparent
            rounded-full
            shadow
            hover:bg-green-700
            focus:outline-none
            focus:ring-2
            focus:ring-white
            focus:ring-offset-2
            focus:ring-offset-gray-300
            sm:px-10">Edit</button>
            <form action="/wishlists/<%= wishlist._id %>/items/<%= item._id %>?_method=DELETE" method="POST">
            <button class="py-2
            text-base
            font-medium
            text-white
            bg-red-600
            border border-transparent
            rounded-full
            shadow
            hover:bg-red-700
            focus:outline-none
            focus:ring-2
            focus:ring-white
            focus:ring-offset-2
            focus:ring-offset-gray-300
            sm:px-10">Delete</button>
          </form>
          </div>
        </div>
      <% } %> 
    </div>
  </div>
</section>


