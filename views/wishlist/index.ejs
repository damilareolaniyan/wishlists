<% layout('layouts/boilerplate') %> 
<body>
    <h1>View All Our Weddings</h1>
    <div class="row">

    <% for(let wishlist of wishlists) {%>
        <div class="card mb-3"  style="width: 50%">
            <% for(let img of wishlist.images){ %>
                <img src="<%= img.url %> " class="img-fluid"  alt="Wedding">
            <% } %> 
            <div class="card-body">
              <h5 class="card-title"><%= wishlist.title %></h5>
              <p class="card-text"><%= wishlist.description %></p>
              <a href="/wishlists/<%= wishlist._id %>" class="btn btn-primary btn-block">View </a>
            </div>
          </div>
        <% } %> 

    </div>
        
        

